{
  "name": "front-commerce-lite",
  "version": "1.0.0",
  "description": "Prototype your next eCommerce experiences using modern web technologies",
  "scripts": {
    "lint": "eslint --max-warnings=0 --fix \"src/**/*.js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "watch:server": "NODE_ENV=development webpack --watch --config webpack.config.js --config-name server",
    "dev:server": "NODE_ENV=development nodemon build/server.js",
    "dev:client": "NODE_ENV=development webpack-dev-server --config webpack.config.js",
    "start": "npm run upward",
    "storybook": "start-storybook -p 9001 -s .storybook",
    "upward": "UPWARD_JS_LOG_URL=1 UPWARD_JS_BIND_LOCAL=1 UPWARD_JS_PORT=4242 UPWARD_JS_UPWARD_PATH=./fcl-upward-server.yml upward-js-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/front-commerce/front-commerce-lite.git"
  },
  "keywords": [
    "ecommerce",
    "react",
    "graphql",
    "apollo",
    "pwa",
    "magento2"
  ],
  "author": "Front-Commerce",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/front-commerce/front-commerce-lite/issues"
  },
  "homepage": "https://github.com/front-commerce/front-commerce-lite#readme",
  "dependencies": {
    "@gramps/gramps": "^1.4.0",
    "@magento/upward-js": "^2.0.0-rc2.0.5",
    "apollo-boost": "^0.1.16",
    "apollo-client": "^2.4.2",
    "apollo-link-http": "^1.5.5",
    "apollo-server-express": "^1.3.6",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "fetch-cookie": "^0.7.2",
    "file-loader": "^1.1.11",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.24.0",
    "node-fetch": "^2.1.2",
    "raw-loader": "^0.5.1",
    "react": "^16.5.2",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.5.2",
    "react-modal": "^3.6.1",
    "react-router-dom": "^4.3.1",
    "recompose": "^0.30.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@magento/pwa-buildpack": "^2.0.0-rc2.0.5",
    "@storybook/addon-actions": "^4.0.0-alpha.10",
    "@storybook/react": "^4.0.0-alpha.10",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^3.6.0",
    "css-loader": "^0.28.11",
    "eslint": "^5.6.1",
    "eslint-config-react-app": "^3.0.3",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-app": "^3.0.0",
    "graphql-tag": "^2.10.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
